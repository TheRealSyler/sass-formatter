root = true


[*]

end_of_line = lf


[*.{editorconfig,gitignore,lock,json,yml,ts,md}]

trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
quote_type = single


[*.md]

trim_trailing_whitespace = false
